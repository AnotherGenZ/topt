{
	"compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "lib": [ "es2015", "dom" ],
        "outDir": "build",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "baseUrl": "../src/",
        "paths": {
            "*": [ "./../*" ],
            "vue": [ "../../node_modules/vue/types/index" ],
            "moment": [ "../../node_modules/moment/moment" ],
            "chartjs": [ "../../node_modules/@types/chart.js/index" ],
            "jszip": [ "../../node_modules/jszip/index" ]
        },

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noEmitOnError": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "../node_modules/**/*",
        "../../node_modules/**/*"
    ]
}
